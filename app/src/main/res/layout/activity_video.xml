<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_margin="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activities.VideoActivity">

    <TextView
        android:id="@+id/videoInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video Information"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_margin="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:animateLayoutChanges="true">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/localVideoFrameCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="1"
            android:layout_margin="10dp"
            >
            <FrameLayout
                android:id="@+id/localVideoFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/remoteVideoFrameCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_margin="10dp"
            >
            <FrameLayout
                android:id="@+id/remoteVideoFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <Button
        android:id="@+id/joinLeaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Join"/>



</LinearLayout>